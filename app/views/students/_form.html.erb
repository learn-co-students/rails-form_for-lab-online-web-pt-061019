<%= form_for @student do %>
  <label for="student_first_name">First Name:</label><br>
  <%= text_field_tag :'student[first_name]', @student.id != nil ? @student.first_name : '' %><br><br>
  <label for="student_last_name">Last Name:</label><br>
  <%= text_field_tag :'student[last_name]', @student.id != nil ? @student.last_name : '' %><br><br>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= submit_tag @student.id != nil ? 'Update Student' : 'Create Student' %>
<% end %>